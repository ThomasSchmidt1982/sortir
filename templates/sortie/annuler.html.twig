{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annuler une sortie</h1>
<dl>
    <dt>Nom de la sortie </dt>
    <dd>{{ sortie.nom }}</dd>

    <dt>Date et heure de la sortie</dt>
    <dd>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</dd>

    <dt>Campus</dt>
    <dd>{{ sortie.organisateur.campus.nom }}</dd>

    <dt>Ville</dt>
    <dd>{{ sortie.lieu.ville.nom }}</dd>

    <dt>Lieu</dt>
    <dd>{{ sortie.lieu.nom }}</dd>

</dl>

    {{ form_start(annulerForm) }}
    {{ form_widget(annulerForm) }}
    <input type="hidden" name="sortie_id" value="{{ sortie.id }}">
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(annulerForm) }}

{% endblock %}

{% block title %}
Annuler une sortie | {{ parent() }}
{% endblock %}

